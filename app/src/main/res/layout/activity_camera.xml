<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".CameraActivity">

    <ImageButton
        android:id="@+id/flash_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:background="?attr/selectableItemBackground"
        android:backgroundTint="@color/transparent"
        android:contentDescription="@string/flash_toggle"
        android:elevation="2dp"
        android:src="@drawable/flash_off_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/videoTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/video_view_finder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/quality_selector"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:background="?attr/selectableItemBackground"
        android:backgroundTint="@color/transparent"
        android:contentDescription="@string/start_capture"
        android:elevation="2dp"
        android:includeFontPadding="false"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="@string/q720p"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/video_view_finder"
        app:layout_constraintEnd_toStartOf="@+id/fps_selector"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fps_selector"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:background="?attr/selectableItemBackground"
        android:backgroundTint="@color/transparent"
        android:contentDescription="@string/start_capture"
        android:elevation="2dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="@string/fps30"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/video_view_finder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.camera.view.PreviewView
        android:id="@+id/photo_view_finder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20sp"
        android:foregroundGravity="bottom"
        app:layout_constraintDimensionRatio="H,3:4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flash_button" >

    </androidx.camera.view.PreviewView>

    <ImageButton
        android:id="@+id/image_capture_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="50sp"
        android:background="?attr/selectableItemBackground"
        android:backgroundTint="@color/transparent"
        android:contentDescription="@string/start_capture"
        android:elevation="2dp"
        android:src="@drawable/capture_white_48dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo_toggle" />

    <androidx.camera.view.PreviewView
        android:id="@+id/video_view_finder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20sp"
        android:foregroundGravity="bottom"
        android:visibility="gone"
        app:layout_constraintDimensionRatio="H,9:16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flash_button" />

    <ImageButton
        android:id="@+id/video_capture_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="30sp"
        android:background="?attr/selectableItemBackground"
        android:backgroundTint="@color/transparent"
        android:contentDescription="@string/start_capture"
        android:elevation="2dp"
        android:src="@drawable/record_start_black_24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo_toggle" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_center_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".50" />

    <Button
        android:id="@+id/photo_toggle"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="5sp"
        android:text="@string/photo"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/vertical_center_line"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/video_toggle"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        android:layout_marginTop="20sp"
        android:text="@string/video"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/vertical_center_line"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".90" />


</androidx.constraintlayout.widget.ConstraintLayout>