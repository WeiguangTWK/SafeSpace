<resources >
    <!-- Base application theme. -->
    <style name="Theme.SafeSpace" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_200</item>
        <item name="colorSecondaryVariant">@color/secondary_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/backgroundColor</item>
        <item name="android:colorForeground">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/black</item>
        <item name="android:itemBackground">@color/secondary_700</item>

    </style>
</resources>